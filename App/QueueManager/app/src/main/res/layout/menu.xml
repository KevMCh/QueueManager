<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/qrButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qr"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/queuelistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/queuelistButton"
        android:layout_below="@+id/qrButton"
        android:layout_alignLeft="@+id/qrButton"
        android:layout_alignStart="@+id/qrButton" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:layout_below="@+id/queuelistButton"
        android:layout_alignLeft="@+id/qrButton"
        android:layout_alignStart="@+id/qrButton" />

</RelativeLayout>