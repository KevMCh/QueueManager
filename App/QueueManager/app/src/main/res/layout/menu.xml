<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:background="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MenÃº principal"
        android:textColor="@color/title"
        android:id="@+id/textView2"
        android:layout_below="@+id/logo"
        android:layout_alignRight="@+id/queuelistButton"
        android:layout_alignEnd="@+id/queuelistButton" />

    <Button
        android:background="@drawable/personalbutton"
        android:id="@+id/qrButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qr"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:background="@drawable/personalbutton"
        android:id="@+id/queuelistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/queuelistButton"
        android:layout_below="@+id/qrButton"
        android:layout_alignLeft="@+id/qrButton"
        android:layout_alignStart="@+id/qrButton"
        android:layout_marginTop="15dp"/>

    <Button
        android:background="@drawable/personalbutton"
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:layout_below="@+id/queuelistButton"
        android:layout_alignLeft="@+id/queuelistButton"
        android:layout_alignStart="@+id/queuelistButton"
        android:layout_marginTop="15dp"/>

</RelativeLayout>